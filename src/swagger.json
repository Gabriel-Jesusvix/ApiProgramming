{
  "openapi": "3.0.0",
  "info": {
    "title": "API car scheduling  Documentation ",
    "description": "this API is about car scheduling ",
    "version": "1.0.0",
    "contact": {
      "email": "gabriel.developer2@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Create a new category",
        "description": "Create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "car"
                  },
                  "description": {
                    "type": "string",
                    "example": "SUV"
                  }
                },
                "example": {
                  "name": "Car",
                  "description": "SUV"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Category created"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "List all categories",
        "description": "Get all categories",
        "responses": {
          "200": {
            "description": "Categories retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
